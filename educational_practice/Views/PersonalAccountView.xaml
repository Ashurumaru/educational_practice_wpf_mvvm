<Window x:Class="educational_practice.Views.PersonalAccountView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:educational_practice.ViewModels"
        mc:Ignorable="d"
        Title="PersonalAccountForm" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource LoginWindowStyle}">
    <Grid>
        <Grid>
            <Grid.Background>
                <StaticResource ResourceKey="BackgroundBrush"/>
            </Grid.Background>
        </Grid>
        <Grid Opacity="0.5" Background="{StaticResource GradientBackgroundBrush}"/>
        <Grid>
            <Border Width="550" Margin="15" Background="White" VerticalAlignment="Center" Padding="30" CornerRadius="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Кабинет пользователя" FontSize="30" FontWeight="Bold" Margin="0 0 0 20"/>
                    <TextBlock x:Name="txtAccessLevel" Text="Уровень доступа: " FontSize="12" FontWeight="Bold" Margin="0 0 0 20"/>
                    <TextBlock x:Name="txtFIO" Text="ФИО: " FontSize="12" FontWeight="Bold" Margin="0 0 0 20"/>
                </StackPanel>
            </Border>
        </Grid>
        <Grid VerticalAlignment="Top">
            <DockPanel Name="titleBar" VerticalAlignment="Top" Height="32" LastChildFill="False" MouseDown="DockPanel_MouseDown" MouseUp="DockPanel_MouseUp" Background="Transparent">
                <Button Style="{StaticResource CloseButtonStyle}" x:Name="btn_close" Content="&#xE8BB;" Click="btn_close_Click"/>
                <Button Style="{StaticResource MaxMinButtonStyle}" x:Name="btn_maximize" Content="&#xE922;" Click="btn_maximize_Click"/>
                <Button Style="{StaticResource MaxMinButtonStyle}" x:Name="btn_minimize" Content="&#xE921;" Click="btn_minimize_Click"/>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
