<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Original Theme-->
    <ImageBrush x:Key="BackgroundBrush" ImageSource="\Images\cifrovoe_iskusstvo.png" Stretch="UniformToFill"/>

    <SolidColorBrush x:Key="ColorViolet" Color="#462AD8"/>
    <SolidColorBrush x:Key="ColorPink" Color="#DA34AE"/>
    <SolidColorBrush x:Key="ColorMagenta" Color="#8A16C1"/>
    <SolidColorBrush x:Key="ColorLightPink" Color="#deabf5"/>
    <SolidColorBrush x:Key="ColorPinkMouseOver" Color="#ba50eb"/>
    <SolidColorBrush x:Key="ColorText" Color="#C7D0CC"/>
    <SolidColorBrush x:Key="ColorLogInBorder" Opacity="0.4" Color="#BC2CD8"/>

    <LinearGradientBrush x:Key="GradientBackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#462AD8" Offset="0"/>
        <GradientStop Color="#DA34AE" Offset="0.75"/>
        <GradientStop Color="#8A16C1" Offset="1"/>
    </LinearGradientBrush>
    
    <!--Custom Theme-->
    
</ResourceDictionary>


        